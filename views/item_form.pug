extends layout

block content
	h1= title

	form(method='POST' action='')
		div.form-group
			label(for='name') Name:
			input#title.form-control(type='text' placeholder='Name of Category' name='name' required='true' value=(undefined===book ? '' : book.title) )
		div.form-group
			label(for='desc') Description:
				input#title.form-control(type='text' placeholder='description' name='desc' required='true' value=(undefined===book ? '' : book.title) )
		div.form-group
			label(for='category') Category:
				select(for="category")
					each category in category_list 
						option(value=category._id) #{category.name}
		div.form-group
			label(for='quantity') Quantity:
				input#title.form-control(type='number' placeholder='quantity' name='quantity' required='true' value=(undefined===book ? '' : book.title) )
		div.form-group
			label(for='price') Price:
				input#title.form-control(type='number' placeholder='price' name='price' required='true' value=(undefined===book ? '' : book.title) )

		button.btn.btn-primary(type='submit') Submit

	if errors
		ul
			for error in errors
				li!= error.msg
